{
  "compilerOptions": {
    "strict": true,
    "module": "commonjs",
    "jsx": "preserve",
    "esModuleInterop": true,
    "allowJs": true,
    "lib": [
      "esNext",
      "dom"
    ],
    "rootDir": "src",
    "moduleResolution": "node",
    "target": "es6",
    "experimentalDecorators": true,
    "noImplicitThis": false,
    "alwaysStrict": true,
    "outDir": "dist",
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules/**"
  ]
}